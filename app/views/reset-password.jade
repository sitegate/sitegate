extends ./public-layout.jade

block content
  h1#sign-header.ui.icon.center.aligned.header
    i.lock.icon
    .content= t('account.password.reset')
  
  form.ui.form.segment(method='post')
    +messageBlock(messages)
    .field
      label= t('account.email')
      .ui.left.icon.input
        input(type="text", placeholder=t('account.email'), name="email")
        i.mail.icon
    button.ui.blue.submit.button(type="submit")= t('account.password.reset')
    a.ui.button(href="/signin")= t('account.cancel')

block scripts
  script(type="text/javascript", src="/js/reset-password.js")