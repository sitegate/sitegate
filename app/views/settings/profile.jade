extends ../settings-layout.jade

block settingsContent
  form.ui.form(method="post")
    +messageBlock(messages)
    .field
      label= t('account.username')
      .ui.left.icon.input
        input(type="text", placeholder=t('account.username'), name="user.username", value=user.username)
        i.user.icon
    .field
      label= t('account.email')
      .ui.left.icon.action.labeled.input
        input(type="text", placeholder=t('account.email'), name="user.email", value=user.email)
        i.mail.icon
        if !user.emailVerified
          #resend-email.ui.animated.fade.red.button
            .visible.content
              i.warning.circle.icon
              | Not verified
            .hidden.content
              i.send.icon
              | Resend email
        else
          .ui.corner.label
            i.checkmark.icon
    button.ui.blue.submit.button(type="submit")= t('common.saveChanges')
block scripts
  script(type="text/javascript", src="/js/settings/profile.js")