extends ../settings-layout.jade

mixin socialConnection(provider, iconClass)
  - var connected = (user.provider == provider || (user.additionalProvidersData && user.additionalProvidersData[provider]));
  if connected
    a(class="fluid big ui red button", href="/auth/" + provider + "/disconnect")
      i(class=iconClass + " icon")
      | Disconnect 
      != t('social.' + provider)
  else
    a(class="fluid big ui black basic button", href="/auth/" + provider)
        i(class=iconClass + " icon")
        | Connect 
        != t('social.' + provider)

block settingsContent
  div.social.connections.container
    h1(class="ui header")= t('settings.addLoginUsingService')
    +socialConnection('facebook', 'facebook')
    +socialConnection('twitter', 'twitter')
    +socialConnection('google', 'google plus')
block styles
  link(rel="stylesheet", href="/dest/css/settings/accounts.css")